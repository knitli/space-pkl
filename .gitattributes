# Set default behavior to automatically normalize line endings
* text=auto

# Force most text files to always use LF
*.py text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.rs text eol=lf
*.json text eol=lf
*.md text eol=lf
*.mdx text eol=lf
*.pkl text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf
*.html text eol=lf
*.css text eol=lf
*.svelte text eol=lf
*.astro text eol=lf
*.tsx text eol=lf
*.jsx text eol=lf
*.mts text eol=lf
*.cts text eol=lf
*.go text eol=lf
LICENSE* text eol=lf
.git* text eol=LF
*.sh text eol=lf
*.svg text eol=lf
*.xml text eol=lf
*.txt text eol=lf
*.csv text eol=lf
*.ini text eol=lf

# Force batch files to use CRLF (Windows scripts)
*.bat text eol=crlf
*.ps* text eol=crlf

# Treat these as binary (no line ending conversion)
*.png binary
*.jpg binary
*.zip binary
*.avif binary
*.webp binary
*.ico binary
*.woff binary
*.woff2 binary
*.ttf binary
*.otf binary
*.eot binary
*.mp4 binary
*.webm binary
*.ogg binary
*.mp3 binary
*.wav binary
*.flac binary
*.aac binary
*.m4a binary
*.pdf binary
*.docx binary
*.xlsx binary
*.pptx binary
*.exe binary
